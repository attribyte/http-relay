<project name="async-publisher" default="dist" xmlns:ivy="antlib:org.apache.ivy.ant">

    <description>Build the Attribyte, LLC async-publisher project</description>

    <property name="jdkVersion" value="1.8" />

    <property name="src" location="src" />
    <property name="build" location="build_publisher" />
    <property name="dist" location="dist_publisher" />


    <property name="groupId" value="org.attribyte" />
    <property name="artifactId" value="attribyte-async-publisher" />
    <property name="version" value="0.5.0" />

    <property name="jar" value="${dist}/lib/${artifactId}-${version}.jar" />
    <property name="javadoc-jar" value="${dist}/lib/${artifactId}-${version}-javadoc.jar" />
    <property name="sources-jar" value="${dist}/lib/${artifactId}-${version}-sources.jar" />

    <path id="classpath">
        <fileset refid="ivy.fileset"/>
        <pathelement location="${build}"/>
    </path>

    <target name="resolve" description="Use ivy to resolve classpaths">
        <ivy:resolve file="ivy_publisher.xml" conf="compile"/>
        <ivy:cachefileset setid="ivy.fileset" conf="compile"/>
    </target>

    <target name="init" depends="resolve">
        <mkdir dir="${build}"/>
        <mkdir dir="${dist}/lib"/>
        <mkdir dir="${dist}/doc/javadoc"/>
    </target>

    <target name="compile" depends="init" description="Compiles the source">
        <javac includeantruntime="false"
               source="${jdkVersion}"
               srcdir="${src}/main/java"
               includes="org/attribyte/relay/AsyncPublisher.java,
                         org/attribyte/relay/Publisher.java"
               destdir="${build}" debug="on">
            <classpath refid="classpath"/>
        </javac>
    </target>

    <target name="dist" depends="compile" description="Creates the distribution">
        <jar jarfile="${jar}" basedir="${build}"/>
    </target>

    <target name="clean" description="Removes all build files">
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
    </target>

    <target name="mvn-dist" depends="dist">
        <javadoc
                access="public"
                destdir="${dist}/doc/javadoc"
                author="true"
                version="true"
                use="true"
                windowtitle="org.attribyte"
                >
            <fileset dir="${src}/main/java" defaultexcludes="yes">
                <include name="org/attribyte/relay/AsyncPublisher.java"/>
                <include name="org/attribyte/relay/Publisher.java"/>
            </fileset>
        </javadoc>
        <jar jarfile="${javadoc-jar}">
            <fileset dir="${dist}/doc" />
        </jar>
        <jar jarfile="${sources-jar}">
            <fileset dir="${src}/main/java" defaultexcludes="yes">
                <include name="org/attribyte/relay/AsyncPublisher.java"/>
                <include name="org/attribyte/relay/Publisher.java"/>
            </fileset>
        </jar>
    </target>
</project>